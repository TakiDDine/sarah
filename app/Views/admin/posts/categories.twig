{% extends "admin/layout.twig" %}

{% block content %}	


<h1>صفحة التصنيفات</h1>


<br>
<div class="col-md-12"><div id="CategoriesFormResult"></div></div>
<div class="col-md-12">
    <div class="panel panel-flat col-md-12">

        <div class="panel-body">
            <form class="form-horizontal" method="post" onsubmit="return false;" id="ADD_CAT_FORM">
                <fieldset class="content-group col-md-6">
                    <legend class="text-bold">اضافة تصنيف جديد</legend>
                    <div class="form-group">
                        <label class="control-label col-lg-3">اسم التصنيف</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="name" placeholder="اسم التصنيف">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3">رابط التصنيف</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="url" placeholder="رابط التصنيف">
                        </div>
                    </div>
                </fieldset>								
               							
                <div class="text-right">
                    <input type="hidden" name="validate" value="add_categories_validate">
                    <button type="submit" class="btn btn-primary" id="add_categories">
                    اضافة التصنيف
                    <i class="icon-arrow-left13 position-right"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<br>
<br>

<div class="col-md-12">
<div class="panel panel-flat">
    <table class="table datatable datatable-basic">
        <thead>
            <tr>
                <th><b> # </b></th>
                <th><b>الإسم</b></th>
                <th><b>الرابط</b></th>
                <th><b>عدد الدليل ذات التصنيف</b></th>
                <th class="text-center"><b>تعديل</b></th>
            </tr>
        </thead>
        <tbody>
            <tr id=''>
            <td></td>
            <td></td>
            <td></td>
            <td></td>

            <td class="text-center">
                <ul class="icons-list">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-menu9"></i></a>
                    <ul class="dropdown-menu dropdown-menu-right">
                       <li><a class="text-success show_cat" cmt-cat-data='' cmt-id-data='' href='!#'>
                       <i class="icon-eye"></i><b>   عرض المواضيع  </b></a>
                       </li>
                        <li><a><i class="icon-eye-blocked"></i><b>   اخفاء المواضيع  </b></a></li>
                        <li>
                        <a class='text-danger delete_cat' cmt-id-data='' href='!#'>
                        <i class="icon-trash"></i><b>  حذف التصنيف    </b></a>
                        
                        </li>
                    </ul>
                </li>
                </ul>
            </td>
            </tr>
        </tbody>
    </table>
</div>
</div>




{% endblock %}