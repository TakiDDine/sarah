                    {{order.notes}}
                    {% if order.notes is empty %}
                    {{l.ordersedit.18}} 
                    {% endif %}
            </fieldset>              
               </div>
              </div>        
	</div> 
   </div>
   
   
   
   
{% if products is not empty %}
<div class="col-md-8">
<div class="panel panel-flat">
    <table class="table table-striped " >
        <thead>
            <tr>
                <th><b>{{l.ordersedit.19}}</b></th>
                <th><b>{{l.ordersedit.20}}</b></th>
                <th><b>{{l.ordersedit.21}}</b></th>
                <th><b>{{l.ordersedit.22}}</b></th>
            </tr>
        </thead>
        <tbody>  
