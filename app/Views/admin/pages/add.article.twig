{% extends "admin/layout.twig" %}

{% block title %} انشاء صفحة جديدة {% endblock %}


{% block content %}
    


				<!-- Content area -->
				<div class="content">
			

				<!-- Page header -->
				<div class="page-header page-header-transparent">
					<div class="page-header-content">
						<div class="page-title">
							<h1> <span class="text-semibold">الصفحات - اضافة صفحة جديدة</span></h1>
						</div>

						
					</div>
				</div>
				<!-- /page header -->
			

			        {% include "admin/elements/flash.twig" %}

<div class="col-md-12">								

<form  enctype="multipart/form-data" id="user_form" method='post' action="{{ path_for('pages.create.post') }}">
<input type="hidden"  name="thumbnailChanged" id="isAdChanged" value="false" />
 

<div class="col-md-9">								
<div class="form-group">
                <label class="control-label">عنوان المقالة</label>
                <input type="text" class="form-control" name="title" placeholder="عنوان المقالة" value="{{old.title}}" />
                <br>
             <b>   الرابط الدائم </b>: {{config.url}} <input type="slug" value="{{old.slug}}" name="slug" class="slug_input"  />
             
            </div>
		
		
		<textarea name="post_content" id="" cols="30" rows="350" class="summernote">{{old.post_content}}</textarea>



</div>					
					

        <div class="col-md-3">

            <div class="panel panel-body border-top-primary text-left">
                <h6 class="no-margin  text-semibold">نشر المقالة</h6>
                <p></p>

                <button type="submit" class="btn bg-teal col-md-6 btn-inline-block">نشر المقالة</button>
                <button type="submit" class="btn bg-teal col-md-5 btn-inline-block" style="margin-right:5%;">حفظ المسودة</button>
            </div>
            
            
            
            
            <div class="panel panel-white">
                <div class="panel-heading ">
                    <h6 class="panel-title">الصورة البارزة للموضوع</h6>
                </div>
                <div class="panel-body ">
                <div class="preview-thumbnail">
                    <img src="" id="profile_avatar"  />
                </div>
                <label for="Upload-thumbnail" ><i class="icon-image2 position-left"></i> اختيار الصورة </label>
            <input name="post_thumbnail" id="Upload-thumbnail" accept="image/jpg, image/jpeg, image/png" style="visibility:hidden;" type="file" />
                </div>
            </div>

            

        </div>
 </form>
 </div>
</div>
<!-- /content area -->

<style>
.preview-thumbnail img {
    width: 100%;
    margin-bottom: 25px;
}

</style>		
<script>
    
function readURL(input) {

if (input.files && input.files[0]) {
var reader = new FileReader();

reader.onload = function (e) {
$('.preview-thumbnail img').attr('src', e.target.result);
}
reader.readAsDataURL(input.files[0]);
}
}
$("#Upload-thumbnail").change(function(){
readURL(this);
    $("#isAdChanged").val("true");
});        
</script>


{% endblock %}