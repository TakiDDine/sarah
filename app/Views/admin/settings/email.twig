{% extends "admin/layout.twig" %}
{% block title %}   اعدادات البريد الإلكتروني   {% endblock %}
{% block content %}

<!-- Main content -->
<div class="content-wrapper">


				<!-- Page header -->
				<div class="page-header page-header-transparent">
					<div class="page-header-content">
						<div class="page-title">
							<h1> <span class="text-semibold">اعدادات البريد الإلكتروني </span></h1>
						</div>
					</div>
				</div>
				<!-- /page header -->


<!-- Content area -->
<div class="content">
		
		{% include "admin/elements/flash.twig" %}

	<div class="panel panel-flat ">

		<div class="panel-body">
			<form class="form-horizontal" method="post" action="{{path_for('settings.email')}}">
				<fieldset class="content-group">
					<div class="form-group">
						<label class="control-label col-lg-3"> خادم البريد  [SMTP Host] </label>
						<div class="col-lg-9">
							<input type="text" class="form-control" value="{{ 'SMTP_Host'|options }}" name="Host" />
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-lg-3"> المنفذ  [SMTP Port] </label>
						<div class="col-lg-9">
							<input type="text" class="form-control" value="{{ 'SMTP_Port'|options }}" name="Port" />
						</div>
					</div>					
					<div class="form-group">
						<label class="control-label col-lg-3">  اسم المستخدم  [SMTP User] </label>
						<div class="col-lg-9">
							<input type="text" class="form-control" value="{{'SMTP_User'|options}}" name="User" />
						</div>
					</div>	
					<div class="form-group">
						<label class="control-label col-lg-3">كلمة المرور [SMTP Password]</label>
						<div class="col-lg-9">
							<input type="text" class="form-control" value="{{'SMTP_Password'|options}}" name="Password" />
						</div>
					</div>																	
				</fieldset>
				<div class="text-right">
					<input type="hidden" name="validate" value="email_settings">
					<button type="submit" class="btn btn-primary">تحديث المعلومات<i class="icon-arrow-left13 position-right"></i></button>
				</div>
			</form>
		</div>
	</div>
    </div>
</div>

{% endblock %}	