});
    
    
$(".media-table #DeleteMedia").click(function() {
    var id = $(this).data("id");
    
    $.ajax({
        type: "POST",
        url: "{{url.base}}{{path_for('media.delete')}}",
        data: { 
            id: $(this).data("id"), // < note use of 'this' here
        },
        success: function(result) {
            $("#"+id+"").remove();
        },
        error: function(result) {
            alert('error');
        }
    });
    
});
    
